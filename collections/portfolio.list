<div class="amd-portfolio-page">
  <div class="filters filter-button-group">
    {.section collection}
    <squarespace:category collection="{urlId}">
      {.if categories}
      <ul>
        <li class="active" data-filter="*">All</li>
        <li data-filter=".{collection.categories.0}">Agency{.end}</li>
        <li data-filter=".{collection.categories.2}">Design/UI</li>
        <li data-filter=".{collection.categories.3}">Web Development</li>
        <li data-filter=".{collection.categories.1}">Branding</li>
      </ul>
    </squarespace:category>
    {.end}
  </div>

  <div class="content grid" id="amd-isotope-container">
    <div class="grid-sizer"></div>
    {.repeated section items}
    <div class="single-content grid-item {categories.0} {categories.1} {categories.2} {categories.3} {categories.4}">
      {.equal? recordTypeLabel "text"}
      <a href="{fullUrl}" target="_blank">
        <img src="{assetUrl}">
        <div class="amd-overlay">
            <div class="amd-overlay-text">
              <h2>{title}</h2>
            </div>
          </div>
      </a>
      {.or}
      <a href="{clickthroughUrl}" target="_blank">
        <img src="{assetUrl}">
        <div class="amd-overlay">
            <div class="amd-overlay-text">
              <h2>{title}</h2>
            </div>
        </div>
      </a>
      {.end}
    </div>
    {.end}
  </div>
</div>