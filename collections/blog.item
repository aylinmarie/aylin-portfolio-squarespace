
{.section item}

  <!--WRAPPER-->
  <article id="post-{id}" class="{@|item-classes}" data-item-id="{id}">

    <!--POST TILE-->
    <h1 class="title" data-content-field="title">
      {.passthrough?}
        <a href="{sourceUrl}" target="_blank">{title}</a>
      {.or}
        {title}
      {.end}
    </h1>

    <!--AUTHOR AND DATE-->
    <p class="meta">
      <a href="{fullUrl}" class="permalink"><time datetime="{addedOn|date %F}">{addedOn|date %B %d, %Y}</time></a> by <a href="{collection.fullUrl}?author={author.id}">{author.displayName}</a>
    </p>
    
    <!--SHARE AND LIKE-->
    {@|like-button}
    {@|social-button}

    <!--MAIN CONTENT-->
    {body}

    <!--BLOG INJECTION-->
    {postItemInjectCode}

    <!--CATEGORIES-->
    {.repeated section categories}
      <a class="category" href="{collection.fullUrl}?category={@|url-encode}">{@}</a>{.alternates with},
    {.end}

    <!--TAGS-->
    {.repeated section tags}
      <a class="tag" href="{collection.fullUrl}?tag={@|url-encode}">{@}</a>{.alternates with},
    {.end}

    <!--LOCATION-->
    {.section location}
      {.section addressTitle}
        {addressTitle}
        {addressLine1}
        {addressLine2}
        {addressCountry}
      {.end}
    {.end}

    <!--COMMENTS-->
    {@|comments}

  </article>
  <!-- Affiliate Notice-->
  <p>I only review products and brands that I use. I will not share anything I do not support or like for the sake of promotion. Some blog posts may contain affiliate links. Some blog posts may contain affiliate links. Please review the Privacy Policy for more information.</p>


{.end}

<!--PAGINATION-->
{.section pagination}
  <nav class="blog-item-pagination">

    <!--NEWER PAGE-->
    {.section prevItem}
      <a href="{fullUrl}">Newer</a>
    {.or}
      <a class="disabled">Newer</a>
    {.end}

    <!--OLDER PAGE-->
    {.section nextItem}
      <a href="{fullUrl}">Older</a>
    {.or}
      <a class="disabled">Older</a>
    {.end}

  </nav>
{.end}

